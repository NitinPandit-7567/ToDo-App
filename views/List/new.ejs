<% layout('./layout/boilerplate')%>
    <div class="container">
        <div class="row">
            <div class="col-6 offset-3 my-3">
                <div class="card my-3">
                    <h3 class="card-title text-center my-3">
                        New List
                    </h3>
                    <form action="/lists" class="needs-validation" novalidate method="POST">
                        <div class="card-body">
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item"><label for="title" class="form-label">List Name:
                                    </label><input type="text" id="title" name="list[title]" class="form-control"></li>
                                <li class="list-group-item"><label for="date" class="form-label">Date: </label><input
                                        type="date" id="date" name="list[date]" class="form-control"></li>
                                <li class="list-group-item"><label for="status"
                                        class="form-label">Status:</label><select name="list[status]" id="status"
                                        class="form-control mb-3">
                                        <option value="New">New</option>
                                        <option value="In Progress">In Progress</option>
                                        <option value="Completed">Completed</option>
                                    </select></li>
                            </ul>
                            <hr>
                            <p class="text-center"><button class="btn btn-success">Create List</button></p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>